
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Admin/Layout/AdminLayout.cshtml";
}

@model List<SimpleWebchat.DAL.Models.Entities.AdminUser>

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Kullanıcı Tablosu</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kullanıcılar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>EMail</th>
                        <th>Katılım Tarihi</th>
                        <th>Rol</th>
                    </tr>
                </thead>
               
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.ID">
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.EMail</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy")</td>
                        @if (item.IsAdmin)
                        {
                            <td>Admin</td>
                        }
                        else
                        {
                            <td>Chatter</td>
                        }

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

